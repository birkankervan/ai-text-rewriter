    "@tanstack/react-query": "^5.90.11",
    "idb": "^8.0.3",
    "lucide-react": "^0.555.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-window": "^1.8.10",
    "tailwindcss": "3.4.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://openrouter.ai/*",
      "https://api.openai.com/*",
      "https://generativelanguage.googleapis.com/*",
      "https://api.groq.com/*",
